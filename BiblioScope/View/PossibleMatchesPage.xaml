<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:BiblioScope.View"
             xmlns:viewModel="clr-namespace:BiblioScope.ViewModel"
             x:Class="BiblioScope.View.PossibleMatchesPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="10">
                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

                <CollectionView ItemsSource="{Binding SearchResults}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <view:BookCardView
                                Book="{Binding}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type view:PossibleMatchesPage}}, Path=BindingContext.BookSelectedCommand}"
                                CommandParameter="{Binding}" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>