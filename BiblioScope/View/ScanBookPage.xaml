<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblioScope.View.ScanBookPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Scan or select a photo of the book cover"
                       FontSize="18" 
                       HorizontalOptions="Center" />

                <Button Text="Pick a Photo" Clicked="OnPickPhotoClicked" />

                <Image x:Name="BookImage"
                       HeightRequest="200"
                       Aspect="AspectFit" />

                <Label Text="Tap a line of text to search:"
                       FontAttributes="Bold"
                       FontSize="16"
                       IsVisible="{Binding OCRLines.Count, Converter={StaticResource ZeroToBoolConverter}}" />

                <CollectionView ItemsSource="{Binding OCRLines}"
                                SelectionMode="Single"
                                SelectionChanged="OnLineSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="8" Margin="4" BackgroundColor="#f0f0f0" CornerRadius="10">
                                <Label Text="{Binding .}" FontSize="14" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>