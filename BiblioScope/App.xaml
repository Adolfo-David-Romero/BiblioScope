<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BiblioScope"
             xmlns:converter="clr-namespace:BiblioScope.Converter"
             x:Class="BiblioScope.App">
    <Application.Resources>
        <ResourceDictionary>
            <converter:ZeroToBoolConverter x:Key="ZeroToBoolConverter" />
            <converter:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converter:NotNullOrEmptyToBoolConverter x:Key="NotNullOrEmptyToBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
